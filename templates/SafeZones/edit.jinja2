{% extends "templates/base.jinja2" %}

{% block content %}

    <h1>Edit - {{ safezone.title }}</h1>

    <form action="/_ah/api/safezones/v1/safezone/insert" method="post" role="form" id="insert-form">

        <input type="hidden" name="id" value="{{ safezone.id }}">

        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" placeholder="Name" class="form-control" value="{{ safezone.title }}">
        </div>

        <div class="form-group">
            <label for="phone">Phone Number</label>
            <input type="phone" name="phone" class="form-control" placeholder="(123) 555-1234" value="{{ safezone.phone }}">
        </div>

        <div class="form-group">
            <label for="lat">Latitide</label>
            <input type="text" name="lat" class="form-control" data-json-parent="location" value="{{ safezone.location.lat }}">
        </div>

        <div class="form-group">
            <label for="lon">Longitude</label>
            <input type="text" name="lon" class="form-control" data-json-parent="location" value="{{ safezone.location.lon }}">
        </div>

        <div class="form-group">
            <label for="occupancy">Occupancy</label>
            <input type="text" name="occupancy" class="form-control" value="{{ safezone.occupancy }}">
        </div>

        <div class="form-group">
            <label for="max_occupancy">Max Occupancy</label>
            <input type="text" name="max_occupancy" class="form-control" value="{{ safezone.max_occupancy }}">
        </div>

        <div class="form-group">
            <label for="extra_info">Extra Info</label>
            <textarea name="extra_info"class="form-control" >{{ safezone.extra_info }}</textarea>
        </div>

        <div class="container-fluid">
            <h3>Hours</h3>

            <div class="form-group row">
                <div class="col-md-6">
                    <label for="monOpen">Monday Open</label>
                    <input type="time" name="monOpen" class="form-control" data-json-parent="hours" value="{{ safezone.hours.monOpen }}">
                </div>

                <div class="col-md-6">
                    <label for="monClose">Monday Close</label>
                    <input type="time" name="monClose" class="form-control" data-json-parent="hours" value="{{ safezone.hours.monClose }}">
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-6">
                    <label for="tueOpen">Tuesday Open</label>
                    <input type="time" name="tueOpen" class="form-control" data-json-parent="hours"value="{{ safezone.hours.tueOpen }}">
                </div>

                <div class="col-md-6">
                    <label for="tueClose">Tuesday Close</label>
                    <input type="time" name="tueClose" class="form-control" data-json-parent="hours" value="{{ safezone.hours.tueClose }}">
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-6">
                    <label for="wedOpen">Wednesday Open</label>
                    <input type="time" name="wedOpen" class="form-control" data-json-parent="hours" value="{{ safezone.hours.wedOpen }}">
                </div>

                <div class="col-md-6">
                    <label for="wedClose">Wednesday Close</label>
                    <input type="time" name="wedClose" class="form-control" data-json-parent="hours" value="{{ safezone.hours.wedClose }}">
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-6">
                    <label for="thursOpen">Thursday Open</label>
                    <input type="time" name="thursOpen" class="form-control" data-json-parent="hours" value="{{ safezone.hours.thursOpen }}">
                </div>

                <div class="col-md-6">
                    <label for="thursClose">Thursday Close</label>
                    <input type="time" name="thursClose" class="form-control" data-json-parent="hours" value="{{ safezone.hours.thursClose }}">
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-6">
                    <label for="friOpen">Friday Open</label>
                    <input type="time" name="friOpen" class="form-control" data-json-parent="hours" value="{{ safezone.hours.friOpen }}">
                </div>

                <div class="col-md-6">
                    <label for="friClose">Friday Close</label>
                    <input type="time" name="friClose" class="form-control" data-json-parent="hours" value="{{ safezone.hours.friClose }}">
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-6">
                    <label for="satOpen">Saturday Open</label>
                    <input type="time" name="satOpen" class="form-control" data-json-parent="hours" value="{{ safezone.hours.satOpen }}">
                </div>

                <div class="col-md-6">
                    <label for="satClose">Saturday Close</label>
                    <input type="time" name="satClose" class="form-control" data-json-parent="hours" value="{{ safezone.hours.satClose }}">
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-6">
                    <label for="sunOpen">Sunday Open</label>
                    <input type="time" name="sunOpen" class="form-control" data-json-parent="hours" value="{{ safezone.hours.sunOpen }}">
                </div>

                <div class="col-md-6">
                    <label for="sunClose">Sunday Close</label>
                    <input type="time" name="sunClose" class="form-control" data-json-parent="hours" value="{{ safezone.hours.sunClose }}">
                </div>
            </div>
        </div>

        <button type="button" id="submit-button" class="btn btn-primary">Submit</button>
    </form>

{% endblock %}

{% block extra_js %}
    <script src="/static/js/insert.js"></script>
{% endblock %}